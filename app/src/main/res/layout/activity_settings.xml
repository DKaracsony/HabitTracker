<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFB16C">

    <!-- Black Bar at the Top (Header) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"> <!-- Ensures content fills available space -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User Preferences Section Header -->
            <TextView
                android:id="@+id/textUserPreferences"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF8800"
                android:text="@string/user_preferences"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="16dp"/>

            <!-- Language Selection Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textLanguageSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language_selection"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="45dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonLanguageSK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SK"
                        android:background="@color/light_orange"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/buttonLanguageEN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="EN"
                        android:background="@color/light_orange"
                        android:textColor="@android:color/white"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- User Settings Section Header -->
            <TextView
                android:id="@+id/textUserSettings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF8800"
                android:text="@string/user_details"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="16dp"/>

            <!-- User Details Section -->
            <LinearLayout
                android:id="@+id/userDetailsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="@string/username_placeholder"/>

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="@string/email_placeholder"
                    android:layout_marginBottom="10dp"/>

                <!-- Log Out Button -->
                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/white"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- UUID Display (shown when offline) -->
            <TextView
                android:id="@+id/textUUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Black Bar at the Bottom (Footer) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <Button
            android:id="@+id/buttonSocial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/proba47"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:drawablePadding="0dp"/>

        <Button
            android:id="@+id/buttonStatistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/proba19"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingVertical="18dp"/>

        <Button
            android:id="@+id/buttonAddHabit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/icon_add"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonMyHabits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/proba12"
            android:drawablePadding="0dp"
            android:paddingVertical="18dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darker_gray"
            android:drawableTop="@drawable/asdasd"
            android:drawablePadding="0dp"
            android:paddingVertical="18dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
