<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFB16C">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textMyHabits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_habits"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <!-- Date Selection Section (Fixed Position) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFB16C"
        android:gravity="center"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/buttonPreviousDate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Previous Date"/>

        <TextView
            android:id="@+id/textViewSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"/>

        <ImageButton
            android:id="@+id/buttonNextDate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Next Date"/>
    </LinearLayout>

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Not Completed/Nesplnené Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF8800"
                android:padding="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textNotCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_completed"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>


            </LinearLayout>

            <!-- TextView for Empty Not Completed Habits -->
            <TextView
                android:id="@+id/textViewEmptyNotCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_habits_left"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp" />

            <!-- List for Not Completed Habits -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNotCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="10dp"/>

            <!-- Completed/Splnené Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF8800"
                android:padding="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completed"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- TextView for Empty Completed Habits -->
            <TextView
                android:id="@+id/textViewEmptyCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_completed_habits"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp" />

            <!-- List for Completed Habits -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Footer - Fixed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <!-- Button 1 (Social) -->
        <Button
            android:id="@+id/buttonSocial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/proba47"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:drawablePadding="0dp"/>

        <!-- Button 2 (Statistics) -->
        <Button
            android:id="@+id/buttonStatistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/proba19"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingVertical="18dp"/>

        <!-- Button 3 (Add Habit) -->
        <Button
            android:id="@+id/buttonAddHabit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:drawableTop="@drawable/icon_add"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:layout_gravity="center"/>

        <!-- Button 4 (My Habits - Currently Active) -->
        <Button
            android:id="@+id/buttonMyHabits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darker_gray"
            android:drawableTop="@drawable/proba12"
            android:drawablePadding="0dp"
            android:paddingVertical="18dp"
            android:gravity="center"/>

        <!-- Button 5 (Settings) -->
        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:drawableTop="@drawable/asdasd"
            android:drawablePadding="0dp"
            android:paddingVertical="18dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
